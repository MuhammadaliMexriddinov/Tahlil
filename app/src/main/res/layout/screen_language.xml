<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnBack"
        style="@style/backButton"
        android:layout_margin="20dp"
        android:contentDescription="@string/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/us"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/us"
        app:layout_constraintBottom_toTopOf="@id/uz"
        app:layout_constraintRight_toRightOf="@id/uz" />

    <ImageView
        android:id="@+id/uz"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="26dp"
        android:src="@drawable/uz"
        android:background="?android:selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ru"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ru"
        app:layout_constraintRight_toRightOf="@id/uz"
        app:layout_constraintTop_toBottomOf="@id/uz" />

    <TextView
        android:id="@+id/usTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="14dp"
        android:text="English"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/us"
        app:layout_constraintLeft_toRightOf="@id/us"
        app:layout_constraintTop_toTopOf="@id/us" />

    <TextView
        android:id="@+id/uzTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="14dp"
        android:text="O'zbekcha"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/uz"
        app:layout_constraintLeft_toRightOf="@id/uz"
        app:layout_constraintTop_toTopOf="@id/uz" />

    <TextView
        android:id="@+id/ruTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="14dp"
        android:text="Русский"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/ru"
        app:layout_constraintLeft_toRightOf="@id/ru"
        app:layout_constraintTop_toTopOf="@id/ru" />

    <View
        android:id="@+id/enBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/us"
        app:layout_constraintBottom_toBottomOf="@id/us"
        app:layout_constraintLeft_toLeftOf="@id/us"
        app:layout_constraintRight_toRightOf="@id/usTxt"
        />
    <View
        android:id="@+id/uzBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/uz"
        app:layout_constraintBottom_toBottomOf="@id/uz"
        app:layout_constraintLeft_toLeftOf="@id/uz"
        app:layout_constraintRight_toRightOf="@id/uzTxt"
        />
    <View
        android:id="@+id/ruBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ru"
        app:layout_constraintBottom_toBottomOf="@id/ru"
        app:layout_constraintLeft_toLeftOf="@id/ru"
        app:layout_constraintRight_toRightOf="@id/ruTxt"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAgain"
        style="@style/mainButton"
        android:layout_margin="20dp"
        android:visibility="invisible"
        android:text="@string/again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>